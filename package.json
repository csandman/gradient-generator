{
  "name": "shade-generator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.11.2",
    "clipboard-polyfill": "^2.8.6",
    "color": "^3.1.2",
    "color-name-list": "^4.10.0",
    "firebase": "^6.6.2",
    "nearest-color": "^0.4.4",
    "node-sass": "^4.12.0",
    "react": "^16.9.0",
    "react-browser-hooks": "^2.2.3",
    "react-dom": "^16.9.0",
    "react-ga": "^2.6.0",
    "react-scripts": "^3.1.2",
    "react-tippy": "^1.2.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettify": "prettier --write \"src/**/*.*(js|s?css)\"",
    "predeploy": "npm install && npm run prettify && npm run build",
    "deploy": "npm run predeploy && firebase deploy"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "prettier": {
    "tabWidth": 2
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "devDependencies": {
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  }
}
